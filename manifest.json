{
    "manifest_version": 3,
    "name": "Salesforce Client Blocking",
    "version": "1.0",
    "description": "Bloquea clientes de Salesforce para QA/Testing.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.salesforcetmo.onrender.com/*",
        "*://*.sandbox.lightning.force.com/*", 
        "*://*.lightning.force.com/*"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.sandbox.lightning.force.com/*",
                "*://*.lightning.force.com/*"
            ],
            "js": ["content_script.js"],
            "run_at": "document_start"
        }
    ]
}