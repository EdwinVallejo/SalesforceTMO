{
    "manifest_version": 3,
    "name": "Salesforce TMO Blocker",
    "version": "1.0",
    "description": "Bloquea cuentas de Salesforce para indicar uso.",
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting" 
    ],
    
    "host_permissions": [
        "https://*.salesforce.com/*",
        "https://salesforcetmo.onrender.com/*" 
    ],
    "content_scripts": [
        {
            "matches": ["https://clarosfi--uat.sandbox.lightning.force.com/lightning/r/Account/*"],
            "js": ["content_script.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    
    
    "background": { 
        "service_worker": "background.js"
    }
}