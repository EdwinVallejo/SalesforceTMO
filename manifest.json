{
    "manifest_version": 3,
    "name": "Bloqueo de Pruebas Salesforce",
    "version": "1.0",
    "description": "Muestra si un cliente de Salesforce est√° en uso por un equipo de pruebas.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.salesforce.com/*",
        "https://salesforcetmo.onrender.com/*" 
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.salesforce.com/lightning/r/Account/*",
                "https://*.salesforce.com/lightning/r/Contact/*"
            ],
            "js": ["content_script.js"]
        }
    ]
}