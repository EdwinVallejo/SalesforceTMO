{
    "manifest_version": 3,
    "name": "Account Blocking To Salesforce",
    "version": "1.0",
    "description": "Bloquea cuentas de Salesforce.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.salesforcetmo.onrender.com/*",
        "*://*.sandbox.lightning.force.com/*", 
        "*://*.lightning.force.com/*"
    ],
      "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
    "background": {
        "service_worker": "service_worker.js"
    },
    
    "content_scripts": [
        {
            "matches": [
                "*://*.sandbox.lightning.force.com/*",
                "*://*.lightning.force.com/*"
            ],
            "js": ["content_script.js"],
            "run_at": "document_start"
        }
    ]
}